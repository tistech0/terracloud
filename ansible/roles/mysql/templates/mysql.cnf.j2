[mysqld]
# Network Settings
bind-address = {{ mysql_bind_address }}
port = {{ mysql_port }}
socket = {{ mysql_socket }}

# InnoDB Settings
innodb_buffer_pool_size = {{ (ansible_memtotal_mb * 0.5) | int }}M
innodb_log_file_size = {{ mysql_innodb_log_file_size | default('64M') }}
innodb_flush_log_at_trx_commit = {{ mysql_innodb_flush_log_at_trx_commit | default(1) }}
innodb_flush_method = {{ mysql_innodb_flush_method | default('O_DIRECT') }}

# Connection Settings
max_connections = {{ mysql_max_connections | default(151) }}
thread_cache_size = {{ mysql_thread_cache_size | default(8) }}
table_open_cache = {{ mysql_table_open_cache | default(4000) }}

# Security Settings
default_authentication_plugin = mysql_native_password
max_allowed_packet = {{ mysql_max_allowed_packet | default('16M') }}

# Character Set Settings
character-set-server = {{ mysql_character_set_server | default('utf8mb4') }}
collation-server = {{ mysql_collation_server | default('utf8mb4_general_ci') }}

# Logging Settings
log_error = /var/log/mysql/error.log
slow_query_log = {{ mysql_slow_query_log | default('1') }}
slow_query_log_file = /var/log/mysql/mysql-slow.log
long_query_time = {{ mysql_long_query_time | default('10') }}